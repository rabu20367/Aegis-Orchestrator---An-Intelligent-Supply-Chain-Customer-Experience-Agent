# Aegis Orchestrator Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Google AI Configuration (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Online Boutique Configuration
BOUTIQUE_BASE_URL=http://frontend:80
BOUTIQUE_API_URL=http://frontend:80/api

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8001

# Agent Configuration
ORCHESTRATOR_AGENT_NAME=orchestrator
PERSONALIZATION_AGENT_NAME=personalization
INVENTORY_AGENT_NAME=inventory
CUSTOMER_COMMS_AGENT_NAME=customer_comms
ANOMALY_RESOLVER_AGENT_NAME=anomaly_resolver

# A2A Communication
A2A_BROKER_URL=redis://redis:6379
A2A_TOPIC_PREFIX=aegis

# Database Configuration
DATABASE_URL=sqlite:///./aegis.db

# Redis Configuration
REDIS_URL=redis://redis:6379

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
